# Helix Memory Configuration
# Copy to ~/.helix-memory.conf and customize
#
# All paths support ~ for home directory

[helix]
# HelixDB connection URL
url = http://localhost:6969
# Directory where helix-memory repo is cloned (contains helix.toml)
data_dir = ~/helix-memory

[paths]
# Helix CLI binary location
helix_bin = ~/.local/bin/helix
# Cache directory for temporary files
cache_dir = ~/.cache/helix-memory

[tools]
# Optional: path to 'p' project registry tool (leave empty if not used)
p_tool =
# Optional: path to 'h' time tracking tool (leave empty if not used)
h_tool =
